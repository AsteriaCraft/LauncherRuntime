<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<!-- DrLeonardo refactor -->

<Pane prefHeight="600.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <Pane id="loginbg" prefHeight="600.0" prefWidth="1024.0">
        <!-- Описание браузера -->
        <Pane id="logo" layoutX="392.0" layoutY="24.0" prefHeight="16.0" prefWidth="16.0" />
        <Label id="title" alignment="CENTER" contentDisplay="CENTER" layoutY="1.0" prefHeight="62.0" prefWidth="1018.0" text="%runtime.overlay.webauth.webauth.web-description" textAlignment="CENTER" />

        <!-- Кнопки управления -->
        <Button id="exit" layoutX="30.0" layoutY="18.0" maxHeight="26.0" maxWidth="60.0" minHeight="26.0" minWidth="60.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="60.0" styleClass="wow">
            <graphic>
                <Pane id="backbutton" maxHeight="26.0" maxWidth="60.0" minHeight="26.0" minWidth="60.0" prefHeight="26.0" prefWidth="60.0">
                    <children>
                        <Text id="backtext" fontSmoothingType="LCD" layoutY="17.0" strokeType="OUTSIDE" text="%runtime.scenes.global.backLabel" textAlignment="CENTER" wrappingWidth="60.0" />
                    </children>
                </Pane>
            </graphic>
        </Button>
   
                 <!-- Браузер -->
        <ScrollPane id="webview" layoutX="7.0" layoutY="67.0" minHeight="1012.0" prefHeight="1012.0" prefWidth="1010.0" />
    </Pane>

    <!-- Подключение стилей-->
    <stylesheets>
        <URL value="@webauth.css" />
        <URL value="@../../styles/global.css" />
        <URL value="@../../styles/variables.css" />
    </stylesheets>

</Pane>
